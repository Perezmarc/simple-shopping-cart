// Theme
$theme = {
  primary: #2e7aef
  secondary: #ccc
  accent: #ccc
  info: #ccc
  warning: #ccc
  error: #ccc
  success: #ccc
  grey: {
    lighten-3: #f6f6f6,
    lighten-2: #ecedef,
    lighten-1: #ddd,
    regular: #b2b2b2,
    darken-1: #999,
    darken-2: #4a4a4a
  }
}

// Fonts
$font = {
    standard: 'CircularStd-Book',
    bold-1: 'CircularStd-Medium',
    bold-2: 'CircularStd-Bold',
    bold-3: 'CircularStd-Black'
}

// Headings
$headings = {
  h1: { size: 32px, font-family: $font.bold-1},
  h2: { size: 28px, font-family: $font.bold-1},
  h3: { size: 24px, font-family: $font.bold-1},
  h4: { size: 20px, font-family: $font.bold-1},
  h5: { size: 16px, font-family: $font.bold-1},
  h6: { size: 16px, font-family: $font.bold-1},
  subheading: { size: 16px, weight: 400 },
}

// Transitions
$transition = {
  fast-out-slow-in: cubic-bezier(0.4, 0.0, 0.2, 1),
  linear-out-slow-in: cubic-bezier(0.0, 0.0, 0.2, 1),
  fast-out-linear-in: cubic-bezier(0.4, 0.0, 1, 1),
  ease-in-out: cubic-bezier(0.4, 0.0, 0.6, 1),
  fast-in-fast-out: cubic-bezier(.25,.8,.25,1),
  swing: cubic-bezier(.25,.8,.50,1)
}
