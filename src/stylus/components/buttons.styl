.c-button
  cursor: pointer
  transition: 0.3s $transition.ease-in-out
  padding: 10px 20px
  font-family: $font.standard
  border-radius: 2px
  font-size: 1em
  display: flex
  justify-content: center
  border: 0
  color: $theme.grey.darken-2
  text-align: center
  img 
    height: 16px
  &.outline
    background: transparent
    border: 1px solid
  &.disabled
    opacity: 0.4
    cursor: default 
  &.primary
    background: $theme.primary
    color: #fff