.footer-wrapper
  display: flex
  margin-top: 40px
  .footer-text
    flex: 1 1 auto
    @extend h3
  .footer-actions
    flex: 1 1 auto
    display: flex
    align-items: center
    & > div
      flex: 0 0 auto
      display: flex
      align-items: center
      cursor: pointer
      img
        margin-left: 20px
      &:first-child
        margin-right: 40px
        img
          margin-left: 0
          margin-right: 20px